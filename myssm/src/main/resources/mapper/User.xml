<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC
        "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jj.myssm.dao.IUserDAO">
    <resultMap id="ReslutUser" type="com.jj.myssm.vo.User">
        <id column="c_id" property="CId" jdbcType="VARCHAR"/>
        <result column="c_loginid" property="CLoginId" jdbcType="VARCHAR"/>
        <result column="c_password" property="CPassWord" jdbcType="VARCHAR"/>
        <result column="c_name" property="CName" jdbcType="VARCHAR"/>
        <result column="n_flag" property="NFlag" jdbcType="INTEGER"/>
    </resultMap>
    <select id="login" resultMap="ReslutUser">
        SELECT
        t_user.c_id,
        t_user.c_loginid,
        t_user.c_password,
        t_user.c_name,
        t_user.n_flag
        FROM
        t_user
        WHERE
        t_user.c_loginid = #{loginid} AND
        t_user.c_password = #{password}
    </select>
    <select id="getListUser" resultMap="ReslutUser" >
        select t_user.c_id,
        t_user.c_loginid,
        t_user.c_password,
        t_user.c_name,
        t_user.n_flag from t_user
        LIMIT #{page},#{index}
    </select>
    <select id="countUser" resultType="int">
        select count(1) from t_user
    </select>
</mapper>