<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC
        "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jj.myssm.dao.INewsDAO">
    <resultMap id="ReslutNews" type="com.jj.myssm.vo.News">
        <id column="c_id" property="CId" jdbcType="INTEGER"/>
        <result column="c_bt" property="CBt" jdbcType="VARCHAR"/>
        <result column="c_fbt" property="CFbt" jdbcType="VARCHAR"/>
        <result column="c_nr" property="CNr" jdbcType="VARCHAR"/>
        <result column="c_type" property="CType" jdbcType="VARCHAR"/>
        <result column="n_type" property="NType" jdbcType="INTEGER"/>
        <result column="d_cjsj" property="DCjsj" jdbcType="DATE"/>
        <result column="d_gxsj" property="DGxsj" jdbcType="DATE"/>
    </resultMap>
    <select id="getListNews" resultMap="ReslutNews" >
         select
         c_id,
         c_bt,
         c_fbt,
         c_nr,
         c_type,
         n_type,
         d_cjsj,
         d_gxsj from t_news
        LIMIT #{page},#{index}
    </select>
    <select id="countNews" resultType="int">
        select count(1) from t_news
    </select>
    <update id="delete">
        DELETE from t_news where c_id = #{cid}
    </update>
    <insert id="add">
        insert into t_news
        (c_bt,
        c_fbt,
        c_nr,
        c_type,
        n_type,
        d_cjsj,
        d_gxsj) VALUES(
        #{CBt},
        #{CFbt},
        #{CNr},
        #{CType},
        #{NType},
        #{DCjsj},
        #{DGxsj}
        )
    </insert>
    <update id="update">
        update t_news
        set
         c_bt=#{CBt},
         c_fbt=#{CFbt},
         c_nr=#{CNr},
         c_type=#{CType},
         n_type=#{NType},
         d_cjsj=#{DCjsj},
         d_gxsj=#{DGxsj}where c_id=#{CId}
    </update>
    <select id="findByCid"  resultMap="ReslutNews">
        SELECT
        c_id,
        c_bt,
        c_fbt,
        c_nr,
        c_type,
         n_type,
         d_cjsj,
         d_gxsj from t_news where c_id=#{cid}

    </select>
</mapper>